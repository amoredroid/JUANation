<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/lgu_profile"
            android:layout_width="92dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="0dp"
            app:srcCompat="@drawable/profile_icon" />

        <TextView
            android:id="@+id/lgu_name"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textColor="@color/colorTertiaryInverse"
            android:layout_toEndOf="@+id/lgu_profile"
            android:fontFamily="@font/montserrat_bold"
            android:text="LGU Name" />

        <TextView
            android:id="@+id/donation_headline"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textColor="@color/colorPrimary"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/lgu_profile"
            android:fontFamily="@font/montserrat_bold"
            android:text="Donation Headline" />

        <TextView
            android:id="@+id/donation_date"
            android:layout_width="292dp"
            android:layout_height="25dp"
            android:textColor="@color/colorTertiaryInverse"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="92dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Donation Date" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>