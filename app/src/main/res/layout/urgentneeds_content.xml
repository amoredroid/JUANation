    <ImageButton
        android:id="@+id/lgucalamitypost_btn"
        android:layout_width="400dp"
        android:layout_height="228dp"
        android:layout_marginEnd="8dp"
        android:alpha="0.8"
        android:layout_marginStart="8dp"
        android:paddingTop="@dimen/cardview_compat_inset_shadow"
        android:scaleType="centerCrop"
        android:text="HELLO"
        android:textSize="100sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:ignore="ContentDescription,HardcodedText,MissingConstraints,VectorDrawableCompat" />

    <TextView
        android:id="@+id/calamityHeadline_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/lgucalamitypost_btn"
        android:layout_alignLeft="@id/lgucalamitypost_btn"
        android:layout_alignRight="@id/lgucalamitypost_btn"
        android:layout_alignTop="@id/lgucalamitypost_btn"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:alpha="1"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="left"
        android:text="@string/textview"
        android:textColor="@color/cardview_light_background"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/lgucalamitypost_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lgucalamitypost_btn"
        app:layout_constraintVertical_bias="0.481"
        tools:ignore="MissingConstraints,RtlHardcoded" />

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lgucalamitypost_btn"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="33dp"
            android:layout_height="30dp"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lgucalamitypost_btn"
            app:srcCompat="@drawable/upvote"
            tools:ignore="ContentDescription,MissingConstraints" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/upvotes"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@id/imageView"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            tools:layout_editor_absoluteY="288dp" />
    </LinearLayout>

    <ImageView

        android:layout_width="418dp"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        android:alpha="0.3"
        android:background="@android:color/transparent"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:src="@drawable/horiz"
        app:layout_constraintTop_toBottomOf="@+id/lgucalamitypost_btn"
        tools:ignore="ContentDescription,MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/dateposted_txt"
        android:layout_width="143dp"
        android:layout_height="12dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:paddingRight="6dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/textview"
        android:textAlignment="viewEnd"
        android:textColor="#FF473A"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/lgucalamitypost_btn"
        app:layout_constraintEnd_toEndOf="@+id/linear"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.814"
        tools:ignore="RtlHardcoded,RtlSymmetry,SmallSp" />


</android.support.constraint.ConstraintLayout>