<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgView_happy_kids"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/happy_kids" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tV_juan"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="180dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="JUAN"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="65sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tV_ation"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/tV_juan"
                    android:layout_marginEnd="41dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="10dp"
                    android:text="ation"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTertiary"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/tV_juan" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circle"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/applogo" />

            </RelativeLayout>


            <Button
                android:id="@+id/btn_sign_in"
                android:layout_width="282dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="99dp"
                android:background="@color/colorPrimary"
                android:fontFamily="@font/montserrat_bold"
                android:text="SIGN IN"
                android:textColor="@color/colorTertiary"
                android:textSize="20sp" />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="29dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/security_icon" />

            <TextView
                android:id="@+id/tV_forgot_psw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="69dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Forgot password?"
                android:textAlignment="center"
                android:textColor="@color/colorTertiaryInverse"
                android:textSize="16sp" />

            <RelativeLayout
                android:id="@+id/relativeLayout_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tV_forgot_psw"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-68dp">

                <TextView
                    android:id="@+id/imgView_tV_new_here"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/colorTertiary"
                    android:fontFamily="@font/montserrat_bold"
                    android:padding="10dp"
                    android:paddingBottom="1dp"
                    android:text="New here?"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorPrimary"
                    android:tint="@color/colorSecondary" />

                <TextView
                    android:id="@+id/tV_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/imgView_tV_new_here"
                    android:background="@color/colorTertiary"
                    android:fontFamily="@font/montserrat_bold"
                    android:padding="10dp"
                    android:paddingLeft="20dp"
                    android:text="Sign up!"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relativeLayout_username"
                android:layout_width="282dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="207dp">

                <ImageView
                    android:id="@+id/imgView_user_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="-109dp"
                    android:background="@color/colorPrimary"
                    android:padding="8dp"
                    android:src="@drawable/user_icon"
                    android:tint="@color/colorSecondary" />

                <EditText
                    android:id="@+id/username"
                    android:layout_width="242dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="39dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:hint="Username"
                    android:inputType="text"
                    android:padding="10dp"
                    android:paddingLeft="20dp"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout_password"
                android:layout_width="282dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="157dp">

                <ImageView
                    android:id="@+id/imgView_passwordIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="-109dp"
                    android:background="@color/colorPrimary"
                    android:padding="8dp"
                    android:src="@drawable/psw_icon"
                    android:tint="@color/colorSecondary" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="242dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="39dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:paddingLeft="20dp"
                    android:textSize="15sp" />

            </RelativeLayout>


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>